@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Actors";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.ProfilePictureUrl" alt="Profile Picture" style="max-width: 150px;" />
                            </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.FullName)
                            </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.Bio)
                            </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@actor.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>|
                            <a class="btn btn-outline-danger" asp-action="Details" asp-route-id="@actor.Id">
                                <i class="bi bi-eye"></i> Details
                            </a>|
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@actor.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
            
        </table>
    </div>
</div>
<div class="floating-action-btn">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>